}

.container {
  height: 100vh;
  width: 750rpx;
}

.background {
  position: fixed;
  height: 100vh;
  width: calc(100vw + 150rpx);
}

.welcome {
  width: 100%;
  height: 100%;
  display: flex;
  padding-left: 38rpx;
  /* background: #37383f; */
