  margin-top: 14rpx;
  line-height: 28rpx;
}

.title .nick {
  max-width: 224rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.top-info {
  width: 750rpx;
  height: 454rpx;
  position: fixed;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  background: #37383f;
}

.top-info .info {
  width: 438rpx;
  height: 123rpx;
  margin-top: 66rpx;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

/**
*屏幕中样式*
