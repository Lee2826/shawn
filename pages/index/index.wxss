/* 放大动画 */

@keyframes tipsAnimation {
  0%, 100% {
    transform: scale(1);
  }

  50% {
    transform: scale(1.1);
  }
}
/* 缩小动画 */

@keyframes tmtAnimation {
  0%, 100% {
    transform: scale(1);
  }

  50% {
    transform: scale(0.9);
  }
}
