/**index.wxss**/

page {
  width: 750rpx;
  overflow-x: hidden;
  font-family: 'PingFang SC';
}
.adContainer{
  height: -1000rpx;
  width: 100%;
}
.cover {
  position: fixed;
  height: 100vh;
  width: 100vw;
  top: 0;
  left: 0;
  z-index: 1000;
  background-color: rgba(0, 0, 0, 0.5);
}

.index-cover {
  position: fixed;
  height: 100vh;
  width: 100vw;
  top: 0;
  left: 0;
  z-index: 1;
  /* background-color: rgba(0, 0, 0, 0.05); */
