/* 列表 */

.list-block {
  box-sizing: border-box;
  /* min-height: 100vh; */
}

.item-block {
  padding: 30rpx 30rpx 0 30rpx;
  display: flex;
  justify-content: space-between;
  width: 100%;
  box-sizing: border-box;
}

.item-block .username {
  color: rgb(94, 109, 150);
  font-weight:500; 
}

.item-block .userImg {
  width: 60rpx;
  height: 60rpx;
  border-radius: 10rpx;
  margin-top: 6rpx
}

.item-block .item-right {
  padding-top: 4rpx;
  box-sizing: border-box;
  width: calc(100% - 80rpx);
}

.item-block .img-block {
  width: 100%;
  display: flex;
  box-sizing: border-box;
  flex-wrap: wrap;
  margin-top: 20rpx;
}

.item-block .img-block .img {
  width: calc((100% - 40rpx)/3);
  height: 190rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  background: #f8f8f8;
  border-radius: 2rpx;
}

.item-block .img-block .img1 {
  width: 260rpx;
  height: 380rpx;
  margin-bottom: 20rpx;
  background: #f8f8f8;
  border-radius: 2rpx;
}

.item-block .img-block .img:nth-child(3n) {
  margin-right: 0;
}

.item-block .item-text {
  width: 100%;
  line-height: 50rpx;
  text-align: left;
  /* word-break: break-all;
